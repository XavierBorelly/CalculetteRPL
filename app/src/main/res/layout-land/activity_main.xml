<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.admin.calculetterpl.MainActivity"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="10"
        android:layout_height="match_parent"
        tools:context="com.example.admin.calculetterpl.MainActivity"
        android:orientation="vertical">
        <TextView
            android:id="@+id/pile4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/fleche"
            android:drawableStart="@drawable/fleche"
            android:background="@color/pile"
            android:layout_weight="1" />
        <TextView
            android:id="@+id/pile3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/fleche"
            android:drawableStart="@drawable/fleche"
            android:background="@color/pile"
            android:layout_weight="1" />
        <TextView
            android:id="@+id/pile2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/fleche"
            android:drawableStart="@drawable/fleche"
            android:background="@color/pile"
            android:layout_weight="1" />
        <TextView
            android:id="@+id/pile1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/fleche"
            android:drawableStart="@drawable/fleche"
            android:background="@color/pile"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/zoneEcriture"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/hand"
            android:drawableStart="@drawable/hand"
            android:paddingLeft="20dp"
            android:paddingStart="20dp"
            android:paddingRight="10dp"
            android:paddingEnd="10dp"
            android:background="@color/zoneEcriture"
            android:layout_weight="3"
            android:gravity="center_vertical"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:padding="0dp"
                android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="0dp"
                android:orientation="horizontal">
                <Button
                    android:onClick="on7"
                    style="?android:attr/button"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/_7" />

                <Button
                    android:onClick="on8"
                    style="?android:attr/button"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/_8" />

                <Button
                    android:onClick="on9"
                    style="?android:attr/button"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/_9" />

                <Button
                    android:onClick="onPlus"
                    style="?android:attr/button"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/caractere"
                    android:gravity="center"
                    android:text="@string/plus" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:onClick="on4"
                    style="?android:attr/button"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:text="@string/_4" />

                <Button
                    android:onClick="on5"
                    style="?android:attr/button"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:text="@string/_5" />

                <Button
                    android:onClick="on6"
                    style="?android:attr/button"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:text="@string/_6" />

                <Button
                    android:onClick="onMoins"
                    style="?android:attr/button"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:background="@color/caractere"
                    android:text="@string/moins" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:onClick="on1"
                    style="?android:attr/button"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:text="@string/_1" />

                <Button
                    android:onClick="on2"
                    style="?android:attr/button"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:text="@string/_2" />

                <Button
                    android:onClick="on3"
                    style="?android:attr/button"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:text="@string/_3" />

                <Button
                    android:onClick="onDiviser"
                    style="?android:attr/button"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:background="@color/caractere"
                    android:text="@string/diviser" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:onClick="onVirgule"
                    style="?android:attr/button"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:background="@color/caractere"
                    android:text="@string/virgule" />

                <Button
                    android:onClick="on0"
                    style="?android:attr/button"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:text="@string/_0" />

                <Button
                    android:onClick="onNegate"
                    style="?android:attr/button"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:background="@color/caractere"
                    android:text="@string/negatif" />

                <Button
                    android:onClick="onMultiplier"
                    style="?android:attr/button"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:background="@color/caractere"
                    android:text="@string/multiplier" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:onClick="onClear"
                    style="?android:attr/button"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:background="@color/caractere"
                    android:text="@string/clear" />

                <Button
                    android:onClick="onPop"
                    style="?android:attr/button"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:background="@color/caractere"
                    android:text="@string/pop" />

                <Button
                    android:onClick="onSwap"
                    style="?android:attr/button"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:background="@color/caractere"
                    android:text="@string/swap" />

                <Button
                    android:onClick="onEnter"
                    style="?android:attr/button"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:background="@color/enter"
                    android:text="@string/enter"/>

            </LinearLayout>
        </LinearLayout>
    
    

</LinearLayout>
